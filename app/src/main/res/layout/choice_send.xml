

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/chioce_bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ciccio"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"
            android:text="Send with" />

        <RelativeLayout
            android:id="@+id/ciccio"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/send_p2p"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_round"
                    android:drawableTop="@drawable/ic_wifi_white_48dp"
                    android:paddingTop="12dp"
                    android:text="Wifi Direct" />

                <Button
                    android:id="@+id/send_share"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_round"

                    android:drawableTop="@drawable/ic_share_white_48dp"
                    android:paddingTop="12dp"
                    android:text="Share" />
            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>



